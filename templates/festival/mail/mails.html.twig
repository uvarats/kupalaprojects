{% extends 'base.html.twig' %}

{% block title %}Информационные письма{% endblock %}

{% block body %}
    <div class="container festival-mails mt-2">
        <div class="d-flex justify-content-between mb-3">
            <h2>Информационные письма</h2>
            <div>
                <a href="{{ path('app_festival_mail_new', {'id': festival.id}) }}" class="mt-2 btn btn-primary">Новое
                    письмо</a>
            </div>
        </div>
        <table class="table table-striped">
            <thead>
            <tr>
                <th scope="col">Тема письма</th>
                <th scope="col">Время отправки</th>
                <th scope="col">Автор</th>
                <th scope="col">Действия</th>
            </tr>
            </thead>
            <tbody>
            {# @var mail \App\Entity\FestivalMail #}
            {% for mail in mails %}
                <tr>
                    <td>{{ mail.subject }}</td>
                    <td>{{ mail.sentAt|date('d.m.Y H:i:s') }}</td>
                    <td>{{ mail.mailAuthor.fullName }}</td>
                    <td>
                        <a href="{{ path('app_festival_mail_view', {'id': festival.id, 'mail_id': mail.id}) }}"
                           class="">Просмотр</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}