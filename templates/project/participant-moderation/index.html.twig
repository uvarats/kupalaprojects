{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
    <div class="container mt-3">
        <div class="d-flex justify-content-center mb-2">
            <h1>Модерация участников проекта "{{ project.name }}"</h1>
        </div>
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                <tr>
                    <th scope="col">ФИО</th>
                    <th scope="col">Учреждение образования</th>
                    <th scope="col">E-Mail</th>
                    <th scope="col">Действия</th>
                </tr>
                </thead>
                <tbody>
                {# @var participant \App\Entity\Participant #}
                {% for participant in participants %}
                    <turbo-frame>
                        <tr id="participant_{{ participant.id }}">
                            <td>{{ participant.fullName }}</td>
                            <td>{{ participant.educationEstablishment }}</td>
                            <td>{{ participant.email }}</td>
                            <td>
                                <div class="d-flex">
                                    <div>
                                        <form action="{{ path('app_project_participant_decision', {
                                            'id': project.id,
                                            'participant_id': participant.id,
                                            'decision': 'approve'
                                        }) }}" method="post">
                                            <button class="btn btn-sm btn-success me-2">Одобрить</button>
                                        </form>
                                    </div>
                                    <div>
                                        <form action="{{ path('app_project_participant_decision', {
                                            'id': project.id,
                                            'participant_id': participant.id,
                                            'decision': 'reject'
                                        }) }}" method="post">
                                            <button class="btn btn-sm btn-danger">Отказать</button>
                                        </form>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    </turbo-frame>
                {% endfor %}
                </tbody>
            </table>
        </div>
        {% if project.teamsAllowed %}
            <div class="mt-3">
                <div class="d-flex justify-content-center">
                    <h1>Модерация команд</h1>
                </div>
                <table class="table table-bordered table-hover">
                    <thead>
                    <tr>
                        <th>Название команды</th>
                        <th>Действия</th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr data-bs-toggle="collapse" data-bs-target="#team1" class="clickable">
                        <td>Команда 1</td>
                        <td>
                            <div class="d-flex">
                                <button type="button" class="btn btn-sm btn-success me-2">Одобрить</button>
                                <button type="button" class="btn btn-sm btn-danger">Отказать</button>
                            </div>
                        </td>
                    </tr>
                    <tr class="expandable collapse" id="team1">
                        <td colspan="2">
                            <table class="table table-striped table-hover">
                                <thead>
                                <tr>
                                    <th>ФИО</th>
                                    <th>Учреждение образования</th>
                                    <th>Email</th>
                                </tr>
                                </thead>
                                <tbody>
                                <tr>
                                    <td>John Doe</td>
                                    <td>University of Lorem Ipsum</td>
                                    <td>johndoe@example.com</td>
                                </tr>
                                <tr>
                                    <td>Jane Smith</td>
                                    <td>College of Lorem Ipsum</td>
                                    <td>janesmith@example.com</td>
                                </tr>
                                </tbody>
                            </table>
                        </td>
                    </tr>
                    <tr data-bs-toggle="collapse" data-bs-target="#team2" class="clickable">
                        <td>Команда 2</td>
                        <td>
                            <div class="d-flex">
                                <button type="button" class="btn btn-sm btn-success me-2">Одобрить</button>
                                <button type="button" class="btn btn-sm btn-danger">Отказать</button>
                            </div>
                        </td>
                    </tr>
                    <tr class="expandable collapse" id="team2">
                        <td colspan="2">
                            <table class="table table-striped table-hover">
                                <thead>
                                <tr>
                                    <th>ФИО</th>
                                    <th>Учреждение образования</th>
                                    <th>Email</th>
                                </tr>
                                </thead>
                                <tbody>
                                <tr>
                                    <td>Mark Johnson</td>
                                    <td>University of Ipsum</td>
                                    <td>markjohnson@example.com</td>
                                </tr>
                                <tr>
                                    <td>Mary Brown</td>
                                    <td>College of Ipsum</td>
                                    <td>marybrown@example.com</td>
                                </tr>
                                </tbody>
                            </table>
                        </td>
                    </tr>
                    </tbody>
                </table>
            </div>
        {% endif %}
    </div>
{% endblock %}